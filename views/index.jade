extends layout

block content
  if query.d == 1
    div(class='row')
      div(class='col-12')
        div(class='alert alert-success')
          p(style='margin-bottom: 0') You have successfully registered.
  if query.e == 1 || query.p == 1
    div(class='row')
      div(class='col-12')
        div(class='alert alert-danger')
          p(style='margin-bottom: 0')= (query.e == 1 ? 'An account with that username is already registered.' : 'This username and password do not match.')
  if 's' in query
    div(class='row')
      div(class='col-12')
        div(class='alert alert-danger')
          p(style='margin-bottom: 0')= "Your account has been " + query.s + "."
  div(class='card')
    div(class='card-header')
      select(id='action',name='action')
        option(value='0',selected=true) Sign Up
        option(value='1') Enable Existing Account
        option(value='2') Disable Existing Account
        option(value='3') Update Password
    div(class='card-block')
      form(action='/signup', method='post')
        div(class='container-fluid')
          div(class='row',id='names-block')
            div(class='col-6')
              label(for='first_name') First Name
              input(id='first_name',type='text',name='first_name',class='form-control',required=true)
            div(class='col-6')
              label(for='last_name') Last Name
              input(id='last_name',type='text',name='last_name',class='form-control',required=true)
              br
          div(class='row',id='email-block')
            div(class='col-12')
              label(for='email') Email
              input(id='email',type='text',name='email',class='form-control',required=true)
              br
          div(class='row',id='username-block')
            div(class='col-12')
              label(for='username') Infinite Campus Username
              input(id='username',type='text',name='username',class='form-control',required=true)
              br
          div(class='row',id='password-block')
            div(class='col-12')
              label(for='password') Infinite Campus Password
              input(id='password',type='password',name='password',class='form-control',required=true)
              br
          div(class='row hidden',id='old-password-block')
            div(class='col-12')
              label(for='old-password') Old Infinite Campus Password
              input(id='old-password',type='password',name='old_password',class='form-control',required=false)
              br
          div(class='row hidden',id='new-password-block')
            div(class='col-12')
              label(for='new-password') New Infinite Campus Password
              input(id='new-password',type='password',name='new_password',class='form-control',required=false)
              br
          div(class='row')
            div(class='col-12')
              input(id='submit',type='submit',name='submit',value='Sign Up',class='form-control btn btn-primary btn-block')

  script(src="/javascripts/index.js")